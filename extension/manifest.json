{
  "manifest_version": 3,
  "name": "Loft Desktop Integration",
  "version": "1.0.0",
  "description": "Desktop integration for Meta web apps via Loft",
  "key": "",
  "permissions": [
    "nativeMessaging",
    "notifications",
    "offscreen",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://facebook.com/messages/*",
    "https://www.facebook.com/messages/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://facebook.com/messages/*",
        "https://www.facebook.com/messages/*"
      ],
      "js": ["notification-override.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://facebook.com/messages/*",
        "https://www.facebook.com/messages/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
